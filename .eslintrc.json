{
 "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier"],
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
   "no-unused-vars":"error",
   "no-unused-expressions":"error",
   "prefer-const":"error",
   "no-console":"warn",
   "no-undef":"error"
  },
  "globals": {
    "process": "readonly"
  },
   "overrides": [
    {
      "files": ["*.ts"],
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      }
    }
  ]
}

